{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CoreObservability",
      "Effect": "Allow",
      "Action": [
        "logs:Describe*",
        "logs:Get*",
        "logs:List*",
        "logs:StartQuery",
        "logs:StopQuery",
        "logs:TestMetricFilter",
        "logs:FilterLogEvents",
        "logs:StartLiveTail",
        "logs:StopLiveTail",
        "cloudwatch:Describe*",
        "cloudwatch:Get*",
        "cloudwatch:List*",
        "events:DescribeRule",
        "events:List*",
        "events:DescribeEventBus",
        "events:TestEventPattern"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ComputeAndNetworking",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "ec2:Get*",
        "ec2:SearchTransitGatewayRoutes",
        "elasticloadbalancing:Describe*",
        "autoscaling:Describe*",
        "application-autoscaling:Describe*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ContainersAndKubernetes",
      "Effect": "Allow",
      "Action": [
        "eks:AccessKubernetesApi",
        "eks:Describe*",
        "eks:List*",
        "ecs:Describe*",
        "ecs:List*",
        "ecr:Describe*",
        "ecr:Get*",
        "ecr:List*",
        "ecr:BatchCheck*",
        "ecr:BatchGet*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "IAMAndSecurity",
      "Effect": "Allow",
      "Action": [
        "iam:Get*",
        "iam:List*",
        "iam:Simulate*",
        "iam:GenerateCredentialReport",
        "iam:GenerateServiceLastAccessedDetails",
        "access-analyzer:Get*",
        "access-analyzer:List*",
        "cloudtrail:Get*",
        "cloudtrail:Describe*",
        "cloudtrail:List*",
        "cloudtrail:LookupEvents",
        "cloudtrail:SearchTrails",
        "guardduty:Get*",
        "guardduty:List*",
        "securityhub:Get*",
        "securityhub:List*",
        "securityhub:Describe*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DatabasesAndAnalytics",
      "Effect": "Allow",
      "Action": [
        "rds:Describe*",
        "rds:List*",
        "rds:Download*",
        "pi:Describe*",
        "pi:Get*",
        "pi:List*",
        "elasticache:Describe*",
        "elasticache:List*",
        "docdb:Describe*",
        "docdb:List*",
        "neptune:Describe*",
        "neptune:List*",
        "redshift:Describe*",
        "redshift:View*",
        "redshift:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "BillingAndCostManagement",
      "Effect": "Allow",
      "Action": [
        "ce:Get*",
        "ce:Describe*",
        "ce:List*",
        "cur:Describe*",
        "cur:List*",
        "budgets:View*",
        "budgets:Describe*",
        "pricing:Describe*",
        "pricing:Get*",
        "pricing:List*",
        "aws-portal:View*",
        "billing:Get*",
        "billing:List*",
        "account:Get*",
        "account:List*",
        "savingsplans:Describe*",
        "savingsplans:List*",
        "compute-optimizer:Get*",
        "compute-optimizer:List*",
        "organizations:Describe*",
        "organizations:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "StorageServices",
      "Effect": "Allow",
      "Action": [
        "s3:Get*",
        "s3:List*",
        "s3:Describe*",
        "s3-object-lambda:Get*",
        "s3-object-lambda:List*",
        "ebs:List*",
        "ebs:Get*",
        "efs:Describe*",
        "efs:List*",
        "fsx:Describe*",
        "fsx:List*",
        "backup:Describe*",
        "backup:Get*",
        "backup:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ServerlessAndIntegration",
      "Effect": "Allow",
      "Action": [
        "lambda:Get*",
        "lambda:List*",
        "states:Describe*",
        "states:Get*",
        "states:List*",
        "apigateway:GET",
        "apigatewayv2:Get*",
        "sns:Get*",
        "sns:List*",
        "sqs:Get*",
        "sqs:List*",
        "kinesis:Describe*",
        "kinesis:Get*",
        "kinesis:List*",
        "kafka:Describe*",
        "kafka:Get*",
        "kafka:List*",
        "mq:Describe*",
        "mq:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ConfigurationAndSecrets",
      "Effect": "Allow",
      "Action": [
        "ssm:Describe*",
        "ssm:Get*",
        "ssm:List*",
        "secretsmanager:Describe*",
        "secretsmanager:List*",
        "secretsmanager:GetResourcePolicy",
        "appconfig:Get*",
        "appconfig:List*",
        "cloudformation:Describe*",
        "cloudformation:Get*",
        "cloudformation:List*",
        "cloudformation:Detect*",
        "cloudformation:Estimate*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "NetworkingAndCDN",
      "Effect": "Allow",
      "Action": [
        "route53:Get*",
        "route53:List*",
        "route53:Test*",
        "route53resolver:Get*",
        "route53resolver:List*",
        "cloudfront:Get*",
        "cloudfront:List*",
        "globalaccelerator:Describe*",
        "globalaccelerator:List*",
        "networkmanager:Get*",
        "networkmanager:Describe*",
        "network-firewall:Describe*",
        "network-firewall:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "MonitoringAndTracing",
      "Effect": "Allow",
      "Action": [
        "xray:Get*",
        "xray:BatchGet*",
        "xray:List*",
        "synthetics:Describe*",
        "synthetics:Get*",
        "synthetics:List*",
        "rum:Get*",
        "rum:List*",
        "rum:BatchGet*",
        "evidently:Get*",
        "evidently:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AdditionalServices",
      "Effect": "Allow",
      "Action": [
        "kms:Describe*",
        "kms:Get*",
        "kms:List*",
        "acm:Describe*",
        "acm:Get*",
        "acm:List*",
        "waf:Get*",
        "waf:List*",
        "wafv2:Get*",
        "wafv2:List*",
        "wafv2:Describe*",
        "shield:Get*",
        "shield:Describe*",
        "shield:List*",
        "resource-explorer-2:Get*",
        "resource-explorer-2:List*",
        "resource-explorer-2:Search",
        "tag:Get*",
        "tag:Describe*",
        "health:Describe*",
        "health:Get*",
        "health:List*",
        "support:Describe*",
        "support:Get*",
        "support:List*",
        "trustedadvisor:Get*",
        "trustedadvisor:List*",
        "trustedadvisor:Describe*"
      ],
      "Resource": "*"
    }
  ]
}
