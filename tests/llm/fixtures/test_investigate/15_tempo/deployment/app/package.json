{
  "name": "checkout-app",
  "version": "1.0.0",
  "description": "Checkout web application with OpenTelemetry and Prometheus metrics",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/templates/**/*\" \"src/public/**/*\" dist",
    "start:backend": "node dist/backend.js",
    "dev:backend": "tsx watch src/backend.ts",
    "dev": "tsx watch src/dev.ts",
    "start": "node dist/dev.js"
  },
  "dependencies": {
    "@autotelic/fastify-opentelemetry": "^0.22.1",
    "@fastify/otel": "^0.5.0",
    "@fastify/static": "^8.1.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.56.1",
    "@opentelemetry/exporter-prometheus": "^0.57.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/instrumentation": "^0.57.2",
    "@opentelemetry/instrumentation-fastify": "^0.44.2",
    "@opentelemetry/instrumentation-http": "^0.57.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.2",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.30.0",
    "fastify": "^5.2.1",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "copyfiles": "^2.4.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  }
}
